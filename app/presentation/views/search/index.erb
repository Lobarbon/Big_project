    <div class="col border-left border-right border-warning">
        <div class="d-flex flex-column text-white">
            <div class="p-2 h3 mb-4 border-bottom border-warning">Search 
                <form class="mt-3" action="/events/search" method="get">
                    <input class="form-control mr-sm-2" type="search" name="q" placeholder="Search" aria-label="Search">
                </form>
            </div>
            <div class="main-scroll">
                <div class="p-2 h3 border-bottom border-warning ">
                    <div class="block-bg">
                        <a class="link-block"></a>
                        <div class="card-header w-100">Search: <%== event_name %></div>
                    </div>
                </div>
                <% query_events.each do |query_event| %>
                        <div class="p-2 h3 border-bottom border-warning">
                            <div class="block-bg">
                                <a class="link-block" href=<%== query_event.link %>>
                                    <div class="card-header"><%== query_event.name %></div>
                                </a>
                            </div>
                        </div>
                <% end %>
           
            </div>
        </div>
    </div>